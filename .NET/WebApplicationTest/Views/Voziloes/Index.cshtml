@model IEnumerable<WebApplicationTest.Models.Vozilo>

@{
    ViewData["Title"] = "Pregled vozila / Vehicles overwiev";
}

<h1>Pregled vozila / Vehicles overwiev</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegOznaka)
